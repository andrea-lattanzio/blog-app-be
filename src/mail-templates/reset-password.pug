doctype html
html(lang="en")
  head
    meta(charset="UTF-8")
    meta(name="viewport", content="width=device-width, initial-scale=1.0")
    title Password Reset Request
    style.
      /* Basic Reset & Body Styles */
      body {
        font-family: 'Inter', sans-serif; /* Fallback to sans-serif */
        background-color: #1d1d1d; /* Light gray background */
        margin: 0;
        padding: 0;
        -webkit-text-size-adjust: 100%;
        -ms-text-size-adjust: 100%;
        width: 100% !important;
      }
      /* Container for the main content */
      .container {
        max-width: 600px;
        margin: 0 auto;
        background-color: #343434; /* White background */
        border-radius: 12px; /* Equivalent to rounded-xl */
        box-shadow: 0 10px 15px -3px rgba(0, 0, 0, 0.1), 0 4px 6px -2px rgba(0, 0, 0, 0.05); /* Equivalent to shadow-lg */
        text-align: center;
        overflow: hidden; /* Important for border-radius to apply to the image */
      }
       /* Header image container */
      .header-image-container {
        display: block; /* Ensures it takes full width */
        width: 100%;
        height: 100px; /* Set a fixed height or adjust as needed */
        background-image: url('https://images.unsplash.com/photo-1542831371-29b0f74f9713?q=80&w=2070&auto=format&fit=crop&ixlib=rb-4.1.0&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D');
        background-repeat: no-repeat;
        background-size: cover;
        background-position: center; /* Center the image */
        /* No margin-bottom here, it will be handled by padding below the image */
      }
      /* Heading styles */
      .h1 {
        font-family: 'Inter', sans-serif;
        font-size: 30px; /* Equivalent to text-3xl */
        line-height: 1.2;
        font-weight: 700; /* Equivalent to font-bold */
        color: #f6f6f6; /* Equivalent to gray-900 */
        margin-bottom: 16px; /* Equivalent to mb-4 */
        padding: 0 25px; /* Add horizontal padding for text */
      }
      /* Paragraph styles */
      .p {
        font-size: 18px; /* Equivalent to text-lg */
        line-height: 1.6; /* Equivalent to leading-relaxed */
        color: #929292; /* Equivalent to gray-700 */
        margin-bottom: 24px; /* Equivalent to mb-6 */
        padding: 0 25px; /* Add horizontal padding for text */
      }
      /* Button styles */
      .button {
        display: inline-block;
        background-color: #0a0a0a; /* Equivalent to bg-indigo-600 */
        color: #cdcdcd; /* Equivalent to text-white */
        font-weight: 600; /* Equivalent to font-semibold */
        padding: 12px 24px; /* Equivalent to py-3 px-6 */
        border-radius: 8px; /* Equivalent to rounded-lg */
        text-decoration: none;
        border: 2px solid #676767;
        margin-bottom: 25px; /* Add bottom margin to the button */
      }
      /* Responsive adjustments for smaller screens */
      @media only screen and (max-width: 600px) {
        .container {
          border-radius: 0; /* Remove border-radius on small screens if desired */
        }
        .h1, .p, .p-small {
          padding: 0 16px; /* Adjust padding for smaller screens */
        }
        .h1 {
          font-size: 28px; /* Adjust font size */
        }
        .p {
          font-size: 16px; /* Adjust font size */
        }
      }
  body
    table(width="100%", cellpadding="0", cellspacing="0", border="0")
      tr
        td(align="center", style="padding: 16px;")
          table.container(width="100%", cellpadding="0", cellspacing="0", border="0")
            tr
              td(style="padding: 0;")
                div.header-image-container
            tr
              td(style="padding: 25px 0 0 0;")
                h1.h1 Password Reset Request
                p.p You asked to reset your password. Click on the link below to reset your password.
                div(style="margin-top: 32px;")
                  a.button(href=passwordResetLink) Reset Password
